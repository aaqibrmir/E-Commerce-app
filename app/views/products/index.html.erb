<div class="container">
<h2><span class="badge badge-success">Products</span></h2>
<table class="table table-dark">
  <thead class="thead-light">
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Title</th>
      <th scope="col">Price</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr>
      <th scope="row"><%= product.id %></th>
      <td><%= product.title %></td>
      <td><%= product.price %>/-</td>
     <td><%= link_to "Add To Cart",add_to_cart_path(product), method: :post, class:"btn btn-sm btn-outline-warning" %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>